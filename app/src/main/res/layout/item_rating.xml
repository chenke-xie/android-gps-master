<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/rating_item_name"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="@string/pub_content1"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rating_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating_item_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/pub_content2"
        android:textColor="#000000"
        android:textStyle="italic" />

    <RatingBar
        android:id="@+id/rating_item_ratingBar"
        style="@style/MyRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/rating_item_name"
        android:indeterminate="false"
        android:isIndicator="true"
        android:numStars="5"
        android:progressBackgroundTint="@color/colorGold"
        android:progressTint="@color/colorGold"
        android:rating="2.5"
        android:secondaryProgressTint="@color/colorTransparent"
        android:stepSize="0.1" />
</RelativeLayout>